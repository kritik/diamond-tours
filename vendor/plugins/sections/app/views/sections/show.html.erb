<% content_for :body_content_title do %>
  <%= @section.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @section.title %>
  </div>
  
  <div>
    <h3>Resort</h3>
    <%= @section.resort_id %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="sections">
    <% @sections.each do |section| %>
      <li>
        <%= link_to section.title, section_url(section) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
