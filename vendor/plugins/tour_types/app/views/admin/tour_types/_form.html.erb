<% form_for [:admin, @tour_type] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger' -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.tour_types.tour_type.delete')
              } %>
<% end -%>
