<% content_for :body_content_title do %>
  <%= @resort.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @resort.title %>
  </div>
  
  <div>
    <h3>Currency</h3>
    <%= @resort.currency_id %>
  </div>
  
  <div>
    <h3>Tour Type</h3>
    <%= @resort.tour_type_id %>
  </div>
  
  <div>
    <h3>Country</h3>
    <%= @resort.country_id %>
  </div>
  
  <div>
    <h3>Weather</h3>
    <%= @resort.weather_id %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @resort.description %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="resorts">
    <% @resorts.each do |resort| %>
      <li>
        <%= link_to resort.title, resort_url(resort) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
