<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(currency) -%>">
  <span class='title'>
    <%=h currency.currency %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), currency_url(currency),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_currency_path(currency),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_currency_path(currency),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
